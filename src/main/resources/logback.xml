<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="com.lifeinide" level="debug"/>

	<root level="info">
		<appender-ref ref="STDOUT"/>
	</root>
</configuration>
